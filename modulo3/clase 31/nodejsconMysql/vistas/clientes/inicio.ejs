<html>
<head>
    <title>Página de Inicio</title>
</head>
<body>
    <h1>Bienvenido a TRAILERFLIX </h1>
    <p> ¡Explora y disfruta! de Series y peliculas</p>

    <!-- Agregar botones para navegar a "inicio" y "catalogo" -->
    <a href="/">Inicio</a>
    <a href="/catalogo">Catálogo</a>
    <!-- Barra de búsqueda -->
                 <form action="/buscar" method="get">
                 <input type="text" name="q" placeholder="Buscar">
                 <button type="submit">Buscar</button>
                 </form>
    <ul>
        <% catalogo.forEach(item => { %>
            <li>
                <strong><%= item.titulo %></strong>
                <br>
                <img src="<%= item.imagen %>" alt="<%= item.titulo %>">
                <br>
                <!-- Embeber el video del trailer -->
                <iframe width="560" height="315" src="<%= item.trailer %>" frameborder="0" allowfullscreen></iframe>
            
                   
            </li>
            
        <% }); %>
    </ul>
</body>
